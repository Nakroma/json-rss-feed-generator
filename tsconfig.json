{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "lib": ["esnext"],
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "dist"]
}
